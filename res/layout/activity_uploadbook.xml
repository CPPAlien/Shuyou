<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userinfo_bg"
    tools:context=".BarCodeScanResult" >
    <RelativeLayout 
	     android:id="@+id/mybooks_top"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignParentTop="true"
	     android:background="@drawable/shuyou_top_bg">
	     <TextView 
	         style="@style/titleText"
	         android:text="编辑备注"
	         android:layout_centerInParent="true"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"/>
	     <RelativeLayout 
	         android:id="@+id/uploadbook_confirm"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true"
	         android:layout_alignParentRight="true"
	         android:layout_marginRight="10dp"
	         android:background="@drawable/shuyou_top_btn">
		     <TextView
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_centerInParent="true"
		         android:textSize="17sp"
		         android:textStyle="bold"
		         android:text="@string/confirm"/>
	     </RelativeLayout>
	     <RelativeLayout 
	         android:id="@+id/uploadbook_back"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true"
	         android:layout_alignParentLeft="true"
	         android:layout_marginLeft="10dp"
	         android:background="@drawable/shuyou_top_btn">
		     <TextView
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_centerInParent="true"
		         android:textSize="17sp"
		         android:textStyle="bold"
		         android:text="@string/back"/>
	     </RelativeLayout>
	  </RelativeLayout>
      <EditText 
          android:id="@+id/uploadbook_edittext"
          android:hint="请填写您的书籍分享理由"
          android:lines="10"
          android:inputType="textMultiLine"
          android:gravity="top|left"
          android:layout_marginTop="80dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_alignParentTop="true"
          android:layout_width="match_parent"
          android:layout_height="150dp"/>
      <TextView 
          android:id="@+id/uploadbook_textnum"
          android:textColor="@color/grey"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/uploadbook_edittext"
          android:layout_alignParentRight="true"
          android:layout_marginBottom="5dp"
          android:layout_marginRight="40dp"/>
      <TextView 
          android:id="@+id/uploadbook_textmaxnum"
          android:textColor="@color/grey"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:layout_below="@id/uploadbook_edittext"
          android:layout_alignParentRight="true"/>
      <TextView 
          android:id="@+id/upload_isbn"
          android:layout_alignParentBottom="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp" 
    android:orientation="vertical">
    <TextView 
        style="@style/dialog_title"
        android:id="@+id/dialog_lendborrow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="确认借入？"/>
     <View 
	     android:layout_marginTop="50dp"
	     android:layout_marginBottom="20dp"
	     android:layout_width="match_parent"
	     android:layout_height="1dp"
	     android:layout_alignParentTop="true"
	     android:background="@color/userinfo_div_line"/>
     <LinearLayout 
         android:orientation="horizontal"
         android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginTop="100dp"
	     android:layout_marginLeft="10dp"
	     android:layout_marginRight="10dp"
	     android:layout_marginBottom="10dp">
	     <RelativeLayout 
	        android:id="@+id/dialog_lendborrow_ok"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:layout_weight="1"
	        android:background="@drawable/shuyou_dialog_button_bg">
	        <TextView
	            style="@style/dialog_button_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:text="@string/confirm"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:id="@+id/dialog_lendborrow_cancel"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_weight="1"
	        android:background="@drawable/shuyou_dialog_button_bg">
	        <TextView
	            style="@style/dialog_button_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:text="取消"/>
	    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>